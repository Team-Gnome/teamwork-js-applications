<div class="row">
     <div class="col-xs-2 col-sm-4 col-md-2">
        <nav class="nav flex-column">
            <ul class="sidebar-nav">
                <li>
                    <a class="nav-link" href="#/createLobby">Create Lobby</a>
                </li>
                <li>
                    <a class="nav-link" href="#/joinLobby">Join Lobby</a>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Friends<span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Invite Friends</a></li>
                        <li><a href="#">Your Team</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Your Lobbies<span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#/createdLobbies">Created Lobbies</a></li>
                        <li><a href="#/joinedLobbies">Joined Lobbies</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Events<span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#/events">Join Event</a></li>
                        <li><a href="#/joinedEvents">Joined Events</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
    </div>

    <div class="col-xs-4 col-sm-8 col-md-10">
        {{#if lobbies}}
        <ul class="lobbies-list">
            {{#each lobbies}}
            <li href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    <h3 class="mb-1" id="lobbyname">{{this._lobbyname}}</h3>
                    <small>{{this._datetime}}</small>
                </div>
                <p class="mb-1"><span class="bolder">Sport:</span> {{this._sport}}</p>
                <p class="mb-1"><span class="bolder">Location:</span>{{this._location}}</p>
                <p class="mb-1"><span class="bolder">Mode:</span> {{this._mode}}</p>
                <small>Created by: <span id="authorname">{{this._author}}</span></small>
                <button type="button" class="btn btn-warning leave-lobby-btn lobby-btn btn-responsive">Leave</button>
            </li>
            {{/each}}
        </ul>
        {{else}}
        <div class="alert alert-info" role="alert">
            <strong>Heads up!</strong> You haven't joined any lobby yet. Click <a href="#/joinLobby"><strong>here</strong></a>            to join one.
        </div>
        {{/if}}
    </div>
</div>

